<header class="c-site-header" role="banner">
  <div class="p-site-container">
    <a class="u-line-height-zero" href="/">
      <%= inline_svg(
        "accesslint-logo.svg",
        role: "img",
        title: "AccessLint",
      ) %>
    </a>

    <div class="c-site-header__nav">
      <%= current_link_to "Blog", "/blog/" %>
      <%= link_to "Help", data.site.help_url %>
      <%= link_to(
        "Log in",
        ENV.fetch("GIT_HUB_LOG_IN_URL", data.site.log_in_url)
      ) %>
    </div>
  </div>
</header>
